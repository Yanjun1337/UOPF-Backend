{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",

	"tasks": [
		{
			"label": "Web Server",
			"type": "shell",
			"command": "php",

			"args": [
				"--server",
				"0.0.0.0:${env:WEB_SERVER_PORT}",
				"index.php"
			],

			"presentation": {
				"reveal": "silent",
				"panel": "dedicated"
			},

			"runOptions": {
				"runOn": "folderOpen"
			}
		}
	]
}
